<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/logoTrakien"
        android:layout_width="248dp"
        android:layout_height="222dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotrakien" />

    <ImageButton
        android:id="@+id/busquedaBtn"
        android:layout_width="120dp"
        android:layout_height="129dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="300dp"
        android:background="@color/white"
        android:contentDescription="Busqueda producto button"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/busqueda_icon" />

    <ImageButton
        android:id="@+id/profileBtn"
        android:layout_width="120dp"
        android:layout_height="129dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="56dp"
        android:background="@color/white"
        android:contentDescription="Profile button"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_btn" />

    <ImageButton
        android:id="@+id/trendsBtn"
        android:layout_width="120dp"
        android:layout_height="129dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="516dp"
        android:background="@color/white"
        android:contentDescription="Trends button"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trends_icon" />

    <ImageButton
        android:id="@+id/avisoBtn"
        android:layout_width="120dp"
        android:layout_height="129dp"
        android:layout_marginTop="516dp"
        android:layout_marginEnd="44dp"
        android:background="@color/white"
        android:contentDescription="Aviso button"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aviso_icon" />

    <TextView
        android:id="@+id/busquedaText"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_marginStart="48dp"
        android:clickable="false"
        android:gravity="center"
        android:text="Busqueda productos"
        android:textColor="#7029AC"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/busquedaBtn" />

    <TextView
        android:id="@+id/profileText"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_marginEnd="44dp"
        android:clickable="false"
        android:gravity="center"
        android:text="Perfil"
        android:textColor="#7029AC"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileBtn" />

    <TextView
        android:id="@+id/trendsText"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_marginStart="48dp"
        android:clickable="false"
        android:gravity="center"
        android:text="Trends"
        android:textColor="#7029AC"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trendsBtn" />

    <TextView
        android:id="@+id/avisoText"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_marginEnd="44dp"
        android:clickable="false"
        android:gravity="center"
        android:text="Aviso productos"
        android:textColor="#7029AC"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avisoBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>